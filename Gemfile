# frozen_string_literal: true

source "https://rubygems.org"

gem "jekyll"
gem "webrick", "~> 1.7"
gem "logger"  # Fixes Ruby 4.0 deprecation warning

# Windows file watching (improves performance)
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

group :jekyll_plugins do
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  gem 'jekyll-feed'
end
